tested-with: GHC ==9.12.2 || ==9.10.2 || ==9.8.4

common warnings
  ghc-options: -Wall

library
  import:           warnings
  exposed-modules:  WebColor.Labels
  build-depends:    base >=4.16.0.0 && < 5.0.0.0
  hs-source-dirs:   src
  default-language: GHC2021

test-suite webcolor-labels-test
  import:           warnings
  default-language: GHC2021
  type:             exitcode-stdio-1.0
  hs-source-dirs:   test
  main-is:          Main.hs
  build-depends:
    , base             >=4.18.2.1
    , tasty
    , tasty-hunit
    , webcolor-labels
